<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>TambahDataFilm</servlet-name>
        <servlet-class>com.rplo.bioskop.model.TambahDataFilm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayPhoto</servlet-name>
        <servlet-class>com.rplo.bioskop.model.DisplayPhoto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListPhoto</servlet-name>
        <servlet-class>com.rplo.bioskop.model.ListPhoto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TambahDataFilm</servlet-name>
        <url-pattern>/TambahDataFilm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayPhoto</servlet-name>
        <url-pattern>/DisplayPhoto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListPhoto</servlet-name>
        <url-pattern>/ListPhoto</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <!--welcome-file>redirect.jsp</welcome-file-->
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
